mixin layout(title)
  doctype html
  meta(charset="utf-8")
  html(lang="en")
    head
      title= title
      link(rel="stylesheet", href="/software-engineering-labs/vt15/assets/css/main.css")
      link(rel="stylesheet", href="/software-engineering-labs/vt15/assets/css/prism.css")
      link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
  body
    .container
      block
    script(src="/software-engineering-labs/vt15/assets/js/prism.js")
    script(src="http://code.jquery.com/jquery-2.1.3.min.js")
    script(src="/software-engineering-labs/vt15/assets/js/main.js")



mixin handin(n, title)
  h3 Exercise 
    =n
    |  &mdash;  
    a(href="#exercise-#{n}")= title
  block


mixin i-folder
  i.fa.fa-folder-open-o  
    if block
      block

mixin i-code
  i.fa.fa-file-code-o  
    if block
      block

mixin i-text
  i.fa.fa-file-text-o  
    if block
      block

mixin i-img
  i.fa.fa-file-image-o   
    if block
      block

mixin i-zip
  i.fa.fa-file-zip-o
    if block
      block

mixin toc-exercises(n)
  ol.exercise-summary
    +i-zip  
      code B#{n}.zip
    li
      ol
        if block
          block

mixin toc-exercise(n)
  li
    +i-folder   
      code Ex#{n}
    ol
      if block
        block

mixin toc-assignment
  li
    if block
      block

mixin vs-solution(name)
  +i-folder
    code=name
    |  (VS solution)
  if block
    ul
      block

mixin vs-file(name)
  li
    +i-code
      code
        if block
          block

mixin file-img(name)
  +i-img
    code=name

mixin file-text(name)
  +i-text
    code=name
      if block
        block



mixin exercise(bignum, num, name)
  h2
    a.hideable(data-target="e#{num}") #{bignum}.#{num} 
      != name
  div(id="e#{num}")
    if block
      block
